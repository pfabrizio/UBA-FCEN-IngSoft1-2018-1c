	cuentas collect: [:cuenta | balanceTotal _ balanceTotal  + (cuenta balance)].
	^balanceTotal .! !


!Portfolio methodsFor: 'testing' stamp: 'GAA 5/9/2018 12:04:57'!
manages: anAccount
	|resultado|
	resultado _ cuentas select: [:cuenta | (cuenta = anAccount) | (cuenta manages: anAccount) ].
